// Arquivo: app.json (VERSÃO FINAL ATUALIZADA)
{
  "expo": {
    "name": "Atena",
    "slug": "Atena",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Logo-Atena.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/Logo-Atena.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6CA2"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seuusuario.atena", // Adicione um identificador único
      "config": {
        "googleMapsApiKey": "${EXPO_PUBLIC_Maps_API_KEY}"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.seuusuario.atena", // Adicione um identificador único
      "config": {
        "googleMaps": {
          "apiKey": "${EXPO_PUBLIC_Maps_API_KEY}"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
